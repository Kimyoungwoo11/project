<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.multi.project.board">
	<select id="selectall" resultType="board">
		select * from board
	</select>
	<select id="paging" parameterType="Criteria" resultType="board">
		<![CDATA[
			select * from (select rownum rn,board_no,id,title,write_date
				from(select board_no,id,title,write_date
					 from board
					 order by write_date desc)
					 )where rn<= #{pageNum} * #{amount}
					and rn > (#{pageNum} -1) * #{amount}
		]]>
	</select>
	<select id="totalCount" resultType="int">
		<![CDATA[
		select count(*) from board where board_no>0
		 ]]>
	</select>
	<select id="read" resultType="board" parameterType="String">
		select * from board where board_no = #{board_no}
	</select>
	<insert id="insert" parameterType="board">
		insert into board
		values(board_seq.nextval,#{name},#{id},#{title},#{content},sysdate,#{category})
	</insert>
</mapper>








